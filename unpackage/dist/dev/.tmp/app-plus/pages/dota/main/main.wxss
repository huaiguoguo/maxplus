.content {
  width: 100%;
  height: auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  background-image: url(/static/img/max+/ow_data_input_bg.png);
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.content .logo {
  text-align: center;
  width: auto;
  height: auto;
  margin-bottom: 50rpx;
}
.content .logo image {
  width: 300rpx;
  height: 180rpx;
}
.content .input {
  width: 80%;
}
.content .input input {
  width: 100%;
  height: 80rpx;
  text-align: center;
  background: #fff;
  border-radius: 10rpx;
  color: #CCCCCC;
}
.content .input input[placeholder] {
  background: red;
}
.content .btn-box {
  width: 80%;
  height: auto;
  border: 0rpx;
  font-family: "YaHei";
}
.content .btn-box button {
  width: 100%;
  height: 80rpx;
  background: #c63939;
  color: #FFFFFF;
  font-size: 30rpx;
  border: 0rpx;
}
.content .btn-bind {
  margin-top: 50rpx;
}
.content .btn-renzheng {
  margin-top: 30rpx;
}
.content .line {
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .line text {
  margin: 0rpx 10rpx;
  color: #C0C0C0;
  font-size: 30rpx;
}
.content .line .left,
.content .line .right {
  width: 80rpx;
  height: 3rpx;
  background: #ccc;
}
.content .line .right {
  background: #ccc;
}

